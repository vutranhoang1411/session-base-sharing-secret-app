<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" placeholder="name@example.com"  <% if (typeof email !="undefined"){%> 
                value="<%= email %>" 
                <% } %> >
            </div>
            <% if (typeof validationErrors != "undefined" && validationErrors.username) { %>
              <div class="text-danger text-left  mb-3"><%= validationErrors.username.msg %></div>
            <% } %>
            <% if (typeof conflictError != "undefined") { %>
              <div class="text-danger text-left  mb-3"><%= conflictError %></div>
            <% } %>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" <% if (typeof password!="undefined"){ %>
                value="<%= password %>"
              <% } %> >
            </div>
            <% if (typeof validationErrors != "undefined" && validationErrors.password) { %>
              <div class="text-danger text-left  mb-3"><%= validationErrors.password.msg %></div>
            <% } %>
            <div class="form-group">
              <label for="password">Password confirm</label>
              <input type="password" class="form-control" name="passwordConfirm"  <% if (typeof passwordConfirm!="undefined"){ %>
                value="<%= passwordConfirm %>"
              <% } %> >
            </div>
            <% if (typeof validationErrors != "undefined" && validationErrors.passwordConfirm) { %>
              <div class="text-danger text-left  mb-3"><%= validationErrors.passwordConfirm.msg %></div>
            <% } %>
            <button type="submit" class="btn btn-dark">Register</button>
            <a href="/login">You already have an account?</a>
          </form>

        </div>
      </div>
    </div>

